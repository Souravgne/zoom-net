{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared-types/*": ["../../packages/shared-types/*"],
      "@zoom-net/wallet-engine": ["../../packages/wallet-engine"],
      // Need path to api-server modules for services
      "@api-services/*": ["../api-server/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
